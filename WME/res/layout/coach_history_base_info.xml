<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coach_history_base_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#FF43C2CB"
            android:textSize="@dimen/day_time_textsize" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:textColor="#FF43C2CB"
            android:textSize="@dimen/day_time_textsize" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bg_view_margin_bottom_value"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#FF29AAAF" />

        <TextView
            android:id="@+id/level_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#FF8DD2D1"
            android:textSize="@dimen/day_time_textsize" />

        <TextView
            android:id="@+id/cycle_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_class"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/cycle_padding_top"
            android:textColor="#FF8DD2D1"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/hit_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cycle_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="#FF8DD2D1"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/hit_rate_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hit_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="#FF8DD2D1"
            android:textSize="@dimen/content_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp" >

            <ImageView
                android:id="@+id/jinyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
                android:src="@drawable/health_history_bg_frame_jingyu" />

            <com.fihtdc.smartbracelet.view.AnimatedImageView
                android:id="@+id/rate_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/jinyu"
                android:layout_marginTop="-10dp"
                android:src="@drawable/stars_change" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-20dp"
                android:scaleType="fitXY"
                android:src="@drawable/health_history_bg_frame_bolang" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>