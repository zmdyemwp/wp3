<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coach_history_next_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/box_padding_value"
    android:layout_marginRight="@dimen/box_padding_value"
    android:layout_marginTop="-18dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/coach_history_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:src="@drawable/ic_coach_history_back" />

    <ImageView
        android:id="@+id/coach_history_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:src="@drawable/ic_coach_history_next" />

</RelativeLayout>