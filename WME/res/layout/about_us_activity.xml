<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/aboutus_padding_left"
    android:paddingRight="@dimen/aboutus_padding_left" >

    <TextView
        android:id="@+id/version_name"
        style="@style/AboutUsTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aboutus_padding_marge_top" />

    <TextView
        android:id="@+id/wme_version_name"
        style="@style/AboutUsTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aboutus_padding_marge_top" />

    <TextView
        android:id="@+id/description"
        style="@style/AboutUsTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aboutus_padding_marge_top"
        android:text="@string/aboutus_description" />

</LinearLayout>