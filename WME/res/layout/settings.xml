<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/setting_padding_left"
    android:splitMotionEvents="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/health_setting_fillet_frame"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <include
            android:id="@+id/bt_pair_layout"
            layout="@layout/setting_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <include
            android:id="@+id/facebook_layout"
            layout="@layout/setting_item_layout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/health_setting_fillet_frame"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <include
            android:id="@+id/email_layout"
            layout="@layout/setting_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <include
            android:id="@+id/alarm_layout"
            layout="@layout/setting_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <include
            android:id="@+id/incoming_call_layout"
            layout="@layout/setting_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <include
            android:id="@+id/find_phone_layout"
            layout="@layout/setting_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <include
            android:id="@+id/reset_all_settings_layout"
            layout="@layout/setting_item_layout" />
    </LinearLayout>

</LinearLayout>